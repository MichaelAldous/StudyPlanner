<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBED21"
    tools:layout_editor_absoluteY="81dp">

    <Spinner
        android:id="@+id/spinner_semester"
        android:layout_width="0dp"
        android:layout_height="40"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonPlannerRefresh"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pathways" />

    <Spinner
        android:id="@+id/spinner_pathways"
        android:layout_width="0dp"
        android:layout_height="40"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonPlanner2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlannerRefresh"
        android:layout_width="wrap_content"
        android:layout_height="45"
        android:layout_marginEnd="30dp"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spinner_semester"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlanner2" />

    <Button
        android:id="@+id/buttonPlanner2"
        android:layout_width="wrap_content"
        android:layout_height="45"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spinner_pathways"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/moduleListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_semester" />

</android.support.constraint.ConstraintLayout>